<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Reg_register"
        android:textSize="36sp"
        android:id="@+id/tvReg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:height="50dp"
        android:textAlignment="center"
        android:textColor="@color/colorTextDark"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Reg_F_name"
        android:id="@+id/tvF_Name"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvReg"
        android:layout_toStartOf="@+id/tvM_Initial"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:layout_marginBottom="6dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Reg_Mi"
        android:id="@+id/tvM_Initial"
        android:layout_below="@+id/tvReg"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorText"
        android:layout_marginBottom="6dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Reg_L_name"
        android:id="@+id/tvL_Name"
        android:layout_below="@+id/tvReg"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvM_Initial"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etFirst"
        android:layout_below="@+id/tvF_Name"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvM_Initial"
        android:textColor="@color/colorText"
        android:nextFocusRight="@+id/etMI"
        android:selectAllOnFocus="true"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etMI"
        android:layout_alignTop="@+id/etFirst"
        android:layout_toEndOf="@+id/etFirst"
        android:width="80dp"
        android:textColor="@color/colorText"
        android:nextFocusRight="@+id/etLast"
        android:selectAllOnFocus="true"
        android:imeOptions="actionNext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etLast"
        android:layout_alignTop="@+id/etMI"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/etMI"
        android:textColor="@color/colorText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/username_text"
        android:id="@+id/tvUser"
        android:layout_below="@+id/etFirst"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorText"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="4dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etUsername"
        android:layout_below="@+id/tvUser"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorText"
        android:layout_marginLeft="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Password_text"
        android:id="@+id/tvPassword"
        android:layout_below="@+id/etUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorText"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:layout_below="@+id/tvPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorText"
        android:layout_marginLeft="4dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Forgot_sub"
        android:id="@+id/bSubmit"
        android:layout_below="@+id/etIlearnPass"
        android:layout_toStartOf="@+id/etMI"
        android:layout_marginTop="42dp"
        android:textColor="@color/colorText"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backReg"
        android:id="@+id/bBackReg"
        android:layout_alignBottom="@+id/bSubmit"
        android:layout_toEndOf="@+id/etMI"
        android:textColor="@color/colorText"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(optional)"
        android:id="@+id/tvOp"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etLast"
        android:textColor="@color/colorText"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ilearn Username:"
        android:id="@+id/tvIlearnUser"
        android:layout_below="@+id/tvOp"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorText"
        android:layout_marginLeft="4dp"
