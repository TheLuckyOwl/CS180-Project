<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/login_back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/username_text"
        android:id="@+id/tvLogin_text"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="false"
        android:layout_alignLeft="@+id/imageView5"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etUsername"
        android:layout_below="@+id/tvLogin_text"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/imageView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Password_text"
        android:id="@+id/tvPassword_text"
        android:layout_below="@+id/etUsername"
        android:layout_alignParentStart="false"
        android:layout_alignLeft="@+id/imageView5"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:layout_below="@+id/tvPassword_text"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/imageView5" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/bLogin"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_marginTop="12dp"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ForgotLog"
        android:id="@+id/bForgotLog"
        android:layout_below="@+id/bLogin"
        android:layout_alignEnd="@+id/bLogin"
        android:layout_alignStart="@+id/bLogin" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_register"
        android:id="@+id/bRegister"
        android:layout_below="@+id/bForgotLog"
        android:layout_alignStart="@+id/bForgotLog"
        android:layout_alignEnd="@+id/bForgotLog" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/highlanderwelcome"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"/>


</RelativeLayout>