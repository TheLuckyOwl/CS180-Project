<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorUCRBlue"
        android:text="@string/contactHeader"
        android:textAlignment="center"
        android:textColor="@color/colorTextDark"
        android:textSize="30sp"
        android:elevation="8dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorUCRBlue"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back"
        android:tint="@color/colorTextDark" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contact"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"
        android:text="@string/contactEmailHeader"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/material_blue_grey_800" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="15dip"
        android:src="@drawable/contact"
        android:tint="@color/colorText" />

    <TextView
        android:id="@+id/emailLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"
        android:layout_toEndOf="@+id/imageView"
        android:clickable="true"
        android:text="@string/contactEmail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorText"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailLink"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"
        android:text="@string/contactLogoutHeader"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="24sp" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/material_blue_grey_800" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view5"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="6dp"
        android:layout_toStartOf="@+id/emailLink"
        android:src="@drawable/logout"
        android:tint="@color/colorText" />


    <TextView
        android:id="@+id/logOutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view5"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/imageView2"
        android:clickable="true"
        android:text="@string/contactLogoutButton"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorText"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view5"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="20dp"
        android:text="@string/contactIlearnHeader"
        android:textColor="@color/colorText" />

    <Button
        android:id="@+id/bChange"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logOutText"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:text="@string/contactIlearnButton"
        android:textColor="@color/colorText" />

    <TextView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent" />

</RelativeLayout>
