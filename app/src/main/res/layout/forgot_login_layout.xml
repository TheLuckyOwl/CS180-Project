<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/loginRecover"
        android:id="@+id/tvTopBanner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:height="50dp"
        android:textAlignment="center"
        android:textColor="@color/colorTextDark"
        android:textSize="36sp"
        android:background="@drawable/account_bgd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Forgot_email"
        android:textStyle="bold"
        android:id="@+id/tvLoginRecovery"
        android:layout_below="@+id/tvTopBanner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etEmailRec"
        android:layout_below="@+id/tvLoginRecovery"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorText"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/Forgot_sub"
        android:id="@+id/bRecover"
        android:width="200dp"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/backReg"
        android:id="@+id/bBacRec"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:layout_alignTop="@+id/bRecover"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Username:"
        android:textStyle="bold"
        android:id="@+id/tvUserRecov"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:layout_below="@+id/etEmailRec"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/bRecover" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etUserRec"
        android:layout_below="@+id/tvUserRecov"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tvLoginRecovery"
        android:textColor="@color/colorText"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"/>
</RelativeLayout>