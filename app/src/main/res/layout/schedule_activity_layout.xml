<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/scheduleTitle"
        android:layout_alignTop="@+id/scheduleTitle"
        android:scaleType="fitCenter"
        android:tint="@color/colorTextDark"
        android:src="@drawable/back"
        android:background="@color/colorPrimary"
        android:id="@+id/backButton" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Schedule"
        android:textSize="30sp"
        android:id="@+id/scheduleTitle"
        android:textAlignment="center"
        android:textColor="@color/colorTextDark"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:background="@drawable/account_bgd"/>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        tools:context=".ScheduleActivity"
        android:background= "@color/colorPrimary"
        android:layout_above="@+id/buttonBar"
        android:layout_below="@+id/scheduleTitle"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:weightSum="2"
        android:showDividers="beginning"
        android:id = "@+id/buttonBar"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/removeClass"
            android:text="Remove"
            android:textColor="#B0A187"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addClass"
            android:text="Add"
            android:textColor="#B0A187"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@color/colorPrimary"/>

    </LinearLayout>
</RelativeLayout>