<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/scheduleTitle"
        android:layout_alignTop="@+id/scheduleTitle"
        android:scaleType="fitCenter"
        android:tint="@color/colorTextDark"
        android:src="@drawable/back"
        android:background="@color/colorPrimary"
        android:id="@+id/backImage"
        android:adjustViewBounds="false"
        android:focusable="false" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friends List"
        android:textSize="30sp"
        android:id="@+id/scheduleTitle"
        android:textAlignment="center"
        android:textColor="@color/colorTextDark"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:background="@drawable/account_bgd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/FriendlistView"
        tools:context=".FriendListActivity"
        android:background= "@color/colorPrimary"
        android:layout_above="@+id/buttonBar"
        android:layout_below="@+id/scheduleTitle"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:weightSum="2"
        android:showDividers="beginning"
        android:id = "@+id/buttonBar"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bAddFriend"
            android:text="Add Friend"
            android:textColor="@color/colorText"
            android:layout_weight="1"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bBFLSearch"
            android:text="Friend Search"
            android:textColor="@color/colorText"
            android:layout_weight="1"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>