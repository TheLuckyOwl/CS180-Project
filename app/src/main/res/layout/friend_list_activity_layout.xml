<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".FriendListActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/scheduleTitle"
        android:layout_alignTop="@+id/scheduleTitle"
        android:scaleType="fitCenter"
        android:tint="@color/colorTextDark"
        android:src="@drawable/back"
        android:background="@color/colorPrimary"
        android:id="@+id/backImage"
        android:adjustViewBounds="false"
        android:focusable="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friends List"
        android:textSize="30sp"
        android:id="@+id/scheduleTitle"
        android:textAlignment="center"
        android:textColor="@color/colorTextDark"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:background="@drawable/account_bgd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:foregroundGravity="fill_horizontal" />

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:layout_below="@+id/backImage"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:weightSum="2"
        android:showDividers="beginning"
        android:id = "@+id/buttonBar"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bAddFriend"
            android:text="Add Friend"
            android:textColor="@color/colorText"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bBFLSearch"
            android:text="Friend Search"
            android:textColor="@color/colorText"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

</RelativeLayout>